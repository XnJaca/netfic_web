---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
---

<Layout
    title="Contacto | NETFIC SOLUTIONS"
    description="Ponte en contacto con nosotros para transformar tus ideas en soluciones tecnológicas innovadoras."
>
    <!-- Hero Section -->
    <div class="relative overflow-hidden pt-20 pb-16 flex items-center justify-center min-h-[50vh]">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0">
            <img 
                src="/src/assets/bg-main.png" 
                alt="NetFic Technology Background" 
                class="w-full h-full object-cover"
            />
            <!-- Dark overlay for better text readability -->
            <div class="absolute inset-0 bg-black/50"></div>
        </div>

        <div class="container relative mx-auto px-4 sm:px-6 lg:px-8 z-10">
            <div class="text-center">
                <!-- Badge -->
                <div class="inline-flex items-center px-4 py-2 bg-blue-500/20 border border-blue-400/30 rounded-full text-blue-300 text-sm font-medium mb-6">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    Hablemos de tu Proyecto
                </div>

                <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
                    <span class="text-white">Contacta con</span>
                    <span class="bg-gradient-to-r from-blue-400 to-indigo-400 bg-clip-text text-transparent"> NetFic</span>
                </h1>

                <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto mb-8">
                    ¿Tienes un proyecto en mente? Nuestro equipo de expertos está listo para 
                    <span class="text-blue-400 font-semibold">transformar tus ideas</span> en 
                    <span class="text-indigo-400 font-semibold">soluciones tecnológicas</span> innovadoras.
                </p>

                <!-- Quick Stats -->
                <div class="grid grid-cols-3 gap-6 max-w-md mx-auto">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-400">24h</div>
                        <div class="text-sm text-gray-400">Respuesta</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-indigo-400">100%</div>
                        <div class="text-sm text-gray-400">Gratuito</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-cyan-400">100%</div>
                        <div class="text-sm text-gray-400">Confiabilidad</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <Contact />
</Layout>
