---
interface Testimonial {
  name: string;
  role: string;
  company: string;
  content: string;
  image?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  testimonials: Testimonial[];
}

const {
  title = "Lo que nuestros clientes dicen",
  subtitle = "Empresas y profesionales que conf√≠an en NetFic Solutions",
  testimonials,
} = Astro.props;
---

<section class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900">{title}</h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">{subtitle}</p>
    </div>

    <div
      class="mt-12 space-y-8 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-12 lg:grid-cols-3"
    >
      {
        testimonials.map((testimonial) => (
          <div class="bg-gray-50 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-300">
            <div class="flex items-center mb-4">
              <div class="flex-shrink-0 h-12 w-12">
                {testimonial.image ? (
                  <img
                    class="h-12 w-12 rounded-full object-cover"
                    src={testimonial.image}
                    alt={testimonial.name}
                  />
                ) : (
                  <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
                    <span class="text-indigo-600 font-semibold text-lg">
                      {testimonial.name.charAt(0)}
                    </span>
                  </div>
                )}
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">
                  {testimonial.name}
                </h3>
                <p class="text-sm text-gray-500">
                  {testimonial.role}, {testimonial.company}
                </p>
              </div>
            </div>
            <div class="relative">
              <svg
                class="absolute top-0 left-0 transform -translate-x-3 -translate-y-2 h-8 w-8 text-gray-200"
                fill="currentColor"
                viewBox="0 0 32 32"
                aria-hidden="true"
              >
                <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
              </svg>
              <p class="relative mt-2 text-gray-600">{testimonial.content}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
